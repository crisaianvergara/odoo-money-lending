<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="borrower_view_tree" model="ir.ui.view">
        <field name="name">borrower.view.tree</field>
        <field name="model">borrower</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address" />
                <field name="birth_date" />
                <field name="age" />
                <field name="gender" />
                <field name="occupation_ids" widget="many2many_tags" />
                <field name="cellphone_number" />
            </tree>
        </field>
    </record>

    <record id="borrower_view_form" model="ir.ui.view">
        <field name="name">borrower.view.form</field>
        <field name="model">borrower</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address" />
                            <field name="birth_date" />
                            <field name="age" />
                            <field name="gender" />
                        </group>
                        <group>
                            <field name="occupation_ids" widget="many2many_tags" />
                            <field name="cellphone_number" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="borrower_action" model="ir.actions.act_window">
        <field name="name">Borrowers</field>
        <field name="res_model">borrower</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="borrower_menu_action" name="Borrowers" parent="borrower_details_menu" 
        action="borrower_action" sequence="0" />
</odoo>