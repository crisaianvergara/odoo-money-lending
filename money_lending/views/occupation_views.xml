<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="occupation_view_tree" model="ir.ui.view">
        <field name="name">occupation.view.tree</field>
        <field name="model">occupation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="occupation_view_form" model="ir.ui.view">
        <field name="name">occupation.view.form</field>
        <field name="model">occupation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="occupation_action" model="ir.actions.act_window">
        <field name="name">Occupations</field>
        <field name="res_model">occupation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="occupation_menu_action" name="Occupations" parent="borrower_details_menu" 
        action="occupation_action" sequence="1" />
</odoo>